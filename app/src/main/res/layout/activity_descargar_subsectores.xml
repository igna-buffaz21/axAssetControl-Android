<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header reutilizable -->
    <include
        android:id="@+id/header"
        layout="@layout/layout_header" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_table_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descargar Subsectores"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textColor="#2C2C2C"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.05"
            android:gravity="center"
            android:textAlignment="center" />

        <!-- Filtros compactos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/filter_background">

            <!-- Selector de Localización -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="Localización"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#000000"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="#FFFFFF"
                app:hintTextColor="#666666"
                app:endIconMode="dropdown_menu"
                app:endIconTint="#000000"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/spinner_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingVertical="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Selector de Sector -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_sector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="Sector"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#000000"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="#FFFFFF"
                app:hintTextColor="#666666"
                app:endIconMode="dropdown_menu"
                app:endIconTint="#000000"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/spinner_sector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingVertical="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Tabla (contenido principal) -->
        <include
            android:id="@+id/table_component"
            layout="@layout/layout_tabla"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>