<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activitys.LoginActivity"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <!-- Fondo con gradiente sutil -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingVertical="24dp">

        <!-- Logo principal con más espacio -->
        <ImageView
            android:id="@+id/logoGolden"
            android:layout_width="180dp"
            android:layout_height="85dp"
            android:layout_marginBottom="48dp"
            android:scaleType="centerInside" />

        <!-- Card de login con diseño moderno -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#F8F9FA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Campo de usuario -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usuario"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Nombre de usuario"
                    app:counterEnabled="true"
                    app:errorEnabled="true"
                    app:boxStrokeColor="#000000"
                    app:hintTextColor="#000000"
                    app:placeholderTextColor="#000000"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="#666666">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:nextFocusDown="@+id/password"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo de contraseña -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="36dp"
                    android:hint="Contraseña"
                    app:passwordToggleEnabled="true"
                    app:errorEnabled="true"
                    app:boxStrokeColor="#000000"
                    app:hintTextColor="#000000"
                    app:placeholderTextColor="#000000"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="#666666"
                    app:endIconTint="#333333"
                    app:passwordToggleTint="#333333">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botón de iniciar sesión con spinner -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/iniciarSesion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Iniciar Sesión"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#000000"
                        app:cornerRadius="12dp"
                        app:elevation="4dp"
                        app:rippleColor="#FFFFFF" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="#FFFFFF"
                        android:visibility="gone" />

                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logo secundario con más espacio -->
        <ImageView
            android:id="@+id/logoAumax"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:layout_marginTop="48dp"
            android:scaleType="centerInside"
            android:alpha="0.8" />

    </LinearLayout>
</FrameLayout>
